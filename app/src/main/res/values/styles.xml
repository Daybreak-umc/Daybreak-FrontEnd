<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===================== -->
    <!-- Base Text -->
    <!-- ===================== -->
    <style name="Text">
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- ===================== -->
    <!-- Dialog Base Text -->
    <!-- ===================== -->
    <style name="Text.Dialog" parent="Text">
        <item name="android:gravity">center</item>
    </style>

    <!-- ===================== -->
    <!-- Title -->
    <!-- ===================== -->
    <style name="Text.future_tit1" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/Gray_0</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/wantedsans_semibold</item>
    </style>

    <!-- ===================== -->
    <!-- Body -->
    <!-- ===================== -->
    <style name="Text.Body" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Gray_400</item>
        <item name="android:fontFamily">@font/wantedsans_semibold</item>
    </style>

    <!-- ===================== -->
    <!-- Dialog Title -->
    <!-- ===================== -->
    <style name="Text.Dialog.Title" parent="Text.Dialog">
        <item name="android:fontFamily">@font/wantedsans_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/Gray_1000</item>
    </style>

    <!-- ===================== -->
    <!-- Dialog Body -->
    <!-- ===================== -->
    <style name="Text.Dialog.Body" parent="Text.Dialog">
        <item name="android:fontFamily">@font/wantedsans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Gray_700</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/Gray_600</item>
        <item name="android:fontFamily">@font/wantedsans_semibold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

</resources>
