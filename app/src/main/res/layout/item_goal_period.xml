<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_rounded_gray800_8dp"
    android:padding="16dp">

    <!-- 원형 칩 -->
    <TextView
        android:id="@+id/item_PeriodChip_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:gravity="center"
        android:text="일 년"
        style="@style/wantedSans_regular_12sp_gray0"
        android:background="@drawable/bg_rounded_gray900_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <!-- 설명 텍스트 -->
    <TextView
        android:id="@+id/item_Description_Tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="주 3-4회 운동 리듬이 잡히기 시작합니다. 주 3-4회 운동 리듬이 잡히기 시작합니다."
        style="@style/wantedSans_semibold_14sp_select"
        app:layout_constraintTop_toBottomOf="@id/item_PeriodChip_Tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
