<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorblack">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />
    
    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="56dp">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/wantedSans_semibold_22sp_yellow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 정보"/>
            <TextView
                style="@style/wantedSans_regular_22sp_gray_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="를" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/wantedSans_regular_22sp_gray_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="찾고 계신가요?"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/setting_terms_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관 및 정책"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/setting_ll"
        android:layout_marginTop="43dp"
        android:textSize="16sp"
        android:textColor="@color/colorfont"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="316dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/setting_terms_tv"
        android:background="@drawable/textview_background_login_radius"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal">
            
            <TextView
                style="@style/wantedSans_semibold_14sp_inside_login"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:text="이용약관"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>
            
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right_light_32"
                android:layout_marginTop="12dp"
                android:layout_marginStart="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <TextView
                style="@style/wantedSans_semibold_14sp_inside_login"
                android:layout_width="110dp"
                android:layout_height="22dp"
                android:text="개인정보 처리 방침"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right_light_32"
                android:layout_marginTop="12dp"
                android:layout_marginStart="145dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <TextView
                style="@style/wantedSans_semibold_14sp_inside_login"
                android:layout_width="150dp"
                android:layout_height="22dp"
                android:text="마케팅 정보 수신 동의 약관"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right_light_32"
                android:layout_marginTop="12dp"
                android:layout_marginStart="105dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <TextView
                style="@style/wantedSans_semibold_14sp_inside_login"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:text="버전 정보"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>

            <TextView
                style="@style/wantedSans_semibold_14sp_inside_login"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:text="1.0.0"
                android:layout_marginTop="12dp"
                android:layout_marginStart="190dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <TextView
                style="@style/wantedSans_semibold_14sp_inside_login"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:text="로그아웃"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_chevron_right_light_32"
                android:layout_marginTop="12dp"
                android:layout_marginStart="200dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <TextView
                style="@style/wantedSans_semibold_14sp_inside_del"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:text="탈퇴하기"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>