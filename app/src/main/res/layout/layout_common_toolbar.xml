<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    tools:showIn="@layout/activity_main"
    android:background="@color/colorblack">


    <!-- Start 16dp -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <!-- End 16dp -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

<!--메인 TOOLBAR-->
    <!-- 로고 -->
    <ImageView
        android:id="@+id/layout_main_common_Logo_Iv"
        android:layout_width="110.62dp"
        android:layout_height="24dp"
        android:src="@drawable/img_logo_light"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!-- 환경설정 아이콘 -->
    <ImageView
        android:id="@+id/layout_main_seting_Iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_my_32"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
<!--Fragment ToolBar // 평소엔 가려짐-->
<!--뒤로가기버튼-->
    <ImageView
        android:id="@+id/layout_frag_back_Iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_chevron_left_light_32"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
<!--title-->
    <TextView
        android:id="@+id/layout_frag_title_Tv"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        style="@style/wantedSans_semibold_14sp_select"
        android:text="목표상세"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>
