<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Left padding guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        />

    <!-- Top padding guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="30dp" />

    <!-- Title row: "미래의 내가 되기 위해" -->
    <LinearLayout
        android:id="@+id/title_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="@id/guideline_top">

        <TextView
            android:id="@+id/title_prefix_tv"
            style="@style/wantedSans_regular_18sp_gray_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미래의 내가 되기 위해 "
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Subtitle row: "완성되지 않았어요" -->
    <LinearLayout
        android:id="@+id/subtitle_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/title_row"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/title_highlight_tv"
            style="@style/wantedSans_semibold_18sp_yellow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떤 행동 목표" />

        <TextView
            android:id="@+id/subtitle_tv"
            style="@style/wantedSans_regular_18sp_gray_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 수행해야 할까요? "
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_create_future_mc"
        android:layout_width="320dp"
        android:layout_height="148dp"
        android:clickable="true"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/Gray_700"
        app:strokeWidth="0dp"
        app:strokeColor="@android:color/transparent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_my_32"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미래의 내가 되기 위한"
                style="@style/wantedSans_semibold_14sp_inside_login"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행동 목표 보러 가기"
                style="@style/wantedSans_semibold_14sp_inside_login"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
