<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/ic_goalitem_bar"
        android:layout_width="4dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_goalitem_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/goalitem_next_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right_light_32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_goalitem_bar"
        app:layout_constraintBottom_toBottomOf="@id/ic_goalitem_bar"/>

    <TextView
        android:id="@+id/goalitem_type_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="타입"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/ic_goalitem_bar"
        app:layout_constraintEnd_toStartOf="@id/goalitem_next_iv"
        app:layout_constraintTop_toTopOf="@id/ic_goalitem_bar"/>

    <TextView
        android:id="@+id/goalitem_message_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="메시지"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/ic_goalitem_bar"
        app:layout_constraintEnd_toStartOf="@id/goalitem_next_iv"
        app:layout_constraintTop_toBottomOf="@id/goalitem_type_tv"
        app:layout_constraintBottom_toBottomOf="@id/ic_goalitem_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>
