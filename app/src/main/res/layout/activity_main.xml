<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblack"
    android:fitsSystemWindows="true">

    <!-- 1. [핵심] 공통 툴바 -->
    <include
        android:id="@+id/commonToolbar"
        layout="@layout/layout_common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. [추가됨] Gray 800 배너 (상단 텍스트 영역 배경) -->
    <!-- 툴바 바로 아래부터 ~ 탭 레이아웃 위까지 차지함 -->
    <View
        android:id="@+id/banner_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/Gray_800"
        app:layout_constraintTop_toBottomOf="@id/commonToolbar"
        app:layout_constraintBottom_toTopOf="@id/home_tablayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3. 가이드라인 (기존 유지) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="148dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="272dp" />

    <!-- 4. 메인 콘텐츠 (최신 스타일 유지됨) -->
    <ImageView
        android:id="@+id/img_symbols_default"
        android:layout_width="68dp"
        android:layout_height="14dp"
        android:src="@drawable/img_symbols_default"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical" />

    <LinearLayout
        android:id="@+id/layout_before_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/img_symbols_default"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/wantedSans_semibold_22sp_yellow_title"
                android:text="2026년 12월" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/wantedSans_regular_22sp_gray_title"
                android:text="의 나는" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/wantedSans_regular_22sp_gray_title"
            android:text="어떤 내가 되어 있을까요?" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_after_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/img_symbols_default"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/after_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/wantedSans_semibold_22sp_yellow_title"
                android:text="2026년 12월" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의 나는"
                style="@style/wantedSans_regular_22sp_gray_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goal_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개"
                style="@style/wantedSans_semibold_22sp_yellow_title" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의 목표를 이룰 거예요"
                style="@style/wantedSans_regular_22sp_gray_title" />
        </LinearLayout>
    </LinearLayout>

    <!-- 5. 탭 레이아웃 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_tablayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_below"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/Gray_500"
        app:tabSelectedTextColor="@color/white"
        app:tabRippleColor="@android:color/transparent"
        app:tabBackground="@drawable/tab_underline_selector"
        app:tabIndicatorHeight="0dp"
        app:tabIndicatorColor="@android:color/transparent" />

    <!-- 6. 뷰페이저 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_tablayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 7. (기존 유지) 메인 컨테이너 -->
    <FrameLayout
        android:id="@+id/main_container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp" />

    <!-- 8. [핵심 수정] 프래그먼트 컨테이너 -->
    <!-- 최신 파일의 topToTop="parent"를 버리고 로컬 파일의 "toBottomOf=@id/commonToolbar" 채택 -->
    <FrameLayout
        android:id="@+id/main_frm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:background="@color/Gray_900"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@id/commonToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
