<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblack"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <ImageView
        android:id="@+id/login_logo"
        android:src="@drawable/img_logo_light"
        android:layout_width="184.37dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="188dp"/>

    <LinearLayout
        android:id="@+id/login_tv_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        android:layout_marginTop="18dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/wantedSans_semibold_22sp_yellow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인" />
            <TextView
                style="@style/wantedSans_regular_22sp_gray_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하고" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/wantedSans_regular_22sp_gray_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하루를 " />
            <TextView
                style="@style/wantedSans_semibold_22sp_yellow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="함께 깨워볼까요?" />
        </LinearLayout>
    </LinearLayout>

<!--포커스를 받았을때 테두리색을 바꿔야하는건 아직-->
    <LinearLayout
        android:id="@+id/login_id_ll"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/login_tv_ll"
        android:layout_marginTop="20dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/edittext_focus_background"
        android:descendantFocusability="afterDescendants">

        <EditText
            android:id="@+id/login_id_et"
            style="@style/wantedSans_regular_14sp_inside_id_pw"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:hint="아이디를 입력해주세요"
            android:textColorHint="@color/Gray_300"
            android:inputType="text"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"/>

        <ImageView
            android:id="@+id/login_id_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_clear_32"
            android:layout_marginStart="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_pwd_ll"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/login_id_ll"
        android:layout_marginTop="16dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/edittext_focus_background"
        android:descendantFocusability="afterDescendants">

        <EditText
            android:id="@+id/login_pwd_et"
            style="@style/wantedSans_regular_14sp_inside_id_pw"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:textColorHint="@color/Gray_300"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        
        <ImageView
            android:id="@+id/login_pwd_close_eye_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_eye_close_32"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/login_pwd_eye_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_option_open_32"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_login_btn"
        style="@style/wantedSans_semibold_14sp_inside_login"
        android:layout_width="320dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@+id/login_pwd_ll"
        android:text="로그인"
        android:background="@drawable/button_background"
        android:layout_marginTop="60dp"
        android:enabled="false"/>

    <ImageView
        android:id="@+id/login_downlogo_iv"
        android:src="@drawable/img_symbols_default"
        android:layout_width="68dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>